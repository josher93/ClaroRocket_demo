<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/color_claro_red</item>
        <item name="android:colorPrimaryDark">@color/color_claro_red_dark</item>
        <item name="android:statusBarColor">@color/color_claro_red</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/color_claro_red</item>
        <item name="android:windowBackground">@color/ActivityWhiteBackground</item>

        <!--Setea el color del item seleccinado en el Drawer-->
        <item name="colorControlHighlight">@color/color_claro_red</item>
        <item name="android:activatedBackgroundIndicator">@drawable/custom_gridview_selector</item>

        <!-- You can also set colorControlNormal, colorControlActivated
        colorControlHighlight, and colorSwitchThumbNormal. -->

        <!--<item name="android:colorControlActivated">@color/ApplicationGreenTheme</item>
        <item name="colorSwitchThumbNormal">@color/ApplicationGreenTheme</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/color_claro_red</item>

    </style>

    <style name="GreenBackgroundCheck" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/ActivityWhiteBackground</item>
        <item name="colorControlActivated">@color/ActivityWhiteBackground</item>
        <item name="android:textColor">@color/ActivityWhiteBackground</item>
    </style>

    <style name="NavigationViewTheme" parent="AppTheme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--<style name="CustomSpinnerGrayText" parent="android:Widget.TextView.SpinnerItem">-->
    <!--<item name="android:textAppearance">@style/CustomSpinnerGrayTextAppearance</item>-->
    <!--</style>-->
    <!--<style name="CustomSpinnerGrayTextAppearance" >-->
    <!--<item name="android:textColor">@color/TextColor</item>-->
    <!--<item name="android:textSize">28sp</item>-->
    <!--</style>-->

    <style name="EditTextForGreenBackground">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/SemiTransparentWhite</item>
        <item name="colorControlActivated">@color/SemiTransparentWhite</item>
        <item name="colorControlHighlight">@color/SemiTransparentWhite</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <!--SHOWCASEVIEW STYLES -->
    <style name="CustomShowcaseTheme2" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/SemiTransparentBlack</item>
        <item name="sv_showcaseColor">#d560bf00</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomContent</item>
        <item name="sv_buttonText">Siguiente</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/AppGreen</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CustomContent" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">@color/ActivityWhiteBackground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--    TEMA CON ACTIONBAR  -->
    <style name="ThemeConfiguration" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ApplicationGreenTheme</item>
        <item name="colorPrimaryDark">@color/ApplicationGreenThemeDark</item>
        <item name="colorAccent">@color/ApplicationGreenTheme</item>
        <item name="android:windowBackground">@color/ActivityWhiteBackground</item>
    </style>


    <!--    TEMA CON PARA DIALOGS    -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/ApplicationGreenTheme</item>

    </style>

    <!--    TEMA CON PARA BOTTOM DRAWER  -->
    <style name="BottomDrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--Setea el color del item seleccinado en el Drawer-->
        <item name="colorControlHighlight">@color/Transparent</item>
        <item name="android:activatedBackgroundIndicator">@color/AppGreen</item>
    </style>


    <!--    ENGAGEMENTE CUSTOM THEMES -->
    <style
        name="Widget.CompoundButton.RadioButton"
        parent="@android:style/Widget.CompoundButton.RadioButton"
        >
        <item name="android:button">@drawable/custom_bg_radio_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="HorizontalWhiteLine">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ActivityWhiteBackground</item>
    </style>

    <style name="horizontalGrayLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/EmptiesColor</item>
    </style>

    <style name="ultraLightGrayLine">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/UltraLightGray</item>
    </style>

</resources>
