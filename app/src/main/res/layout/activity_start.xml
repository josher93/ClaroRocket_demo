<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppGreen"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.globalpaysolutions.yovendorecarga.Start">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="245dp"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/VerticalItemSpace"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/yvs_logo_green"
            />

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/ActivityVerticalExtraCustomMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_StartLogin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_effect_ripple_white"
                android:clickable="true"
                android:paddingLeft="@dimen/ActivityHorizontalExtraCustomMargin"
                android:paddingRight="@dimen/ActivityHorizontalExtraCustomMargin"
                android:text="@string/btn_login"/>
            <LinearLayout
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
                <View
                    style="@style/HorizontalWhiteLine"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:textColor="@color/ActivityWhiteBackground"
                    android:text="@string/label_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    style="@style/HorizontalWhiteLine"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_StartRegister"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/btn_effect_ripple_white"
                android:clickable="true"
                android:onClick="Login"
                android:paddingLeft="@dimen/ActivityHorizontalExtraCustomMargin"
                android:paddingRight="@dimen/ActivityHorizontalExtraCustomMargin"
                android:text="@string/btn_register"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
